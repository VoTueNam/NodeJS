<div class="mt-4">
    <h3>Sửa khóa học</h3>

    <form method="post" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            
            <label for="name">Tên</label> 
            {{!-- Cái NAME này quyết định tên trường trong DB gửi đi qua POST or GET --}}
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name" placeholder="Nhập tên">
        </div>

        <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" value="{{course.description}}" id="description" name="description"  placeholder="Nhập mô tả">
        </div>

        <div class="form-group">
            <label for="image">Link hình</label>
            <input type="text" class="form-control" value="{{course.img}}" id="image" name="img"  placeholder="Nhập link">
        </div>

        <div class="form-group">
            <label for="level">Cấp độ</label>
            <input type="text" class="form-control" value="{{course.level}}" id="flag" name="level"  placeholder="Nhập level">
        </div>

        <button type="submit" class="btn btn-primary">Save as</button>
    </form>
</div>