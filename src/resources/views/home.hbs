<h1>HOME PAGE</h1>

<div class="mt-4">
    <div class="row">

        {{!-- đọc từ DB ra - vòng lặp for --}}
        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card">
                <a href="/courses/{{this.flag}}">
                    <img class="card-img-top" src={{ this.img }} alt="Card image cap">
                </a>

                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{ this.name }}</h5>
                    </a>

                    <p class="card-text">{{ this.description }}</p>
                    <a href="#" class="btn btn-primary">{{ this.name }}</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>